{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@main/*": ["src/main/*"],
            "@shared/*": ["src/shared/*"]
        }
    },
    "include": ["vite.config.ts", "src/main/**/*", "src/preload/**/*", "src/shared/**/*"]
}
